<h1>Editing Topic</h1>

<p>
  <%= form_for @topic do |f| %>

    <% if @topic.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@topic.errors.count, "error") %> prohibited
          this user from being saved:</h2>
        <ul>
          <% @topic.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <p class="field">
      <%= f.label :tag_list, "Tags (separated by commas)" %><br />
      <%= f.text_field :tag_list %>
    </p>

    <%= f.submit %>
  <% end %>
</p>

<%= link_to 'Back', topics_path %>
