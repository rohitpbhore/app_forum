<h3>Comments</h3>
<ul id="comments">
<% if !@topic.first.comments.blank? %>
    <% @topic.first.comments.each do |a| %>
      <li id="comment_<%= a.id %>">
        <%= a.body %> 
        <%= link_to 'Destroy', [@topic.first, a], method: :delete, remote: true, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  
<% else %>
  <h3 class='no_comments'>No Comments...</h3>
<% end %>
</ul>